<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f8f9fa" />
            <stroke
                android:width="1dp"
                android:color="#d2d2d2" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#8DC63F"
                android:startColor="#8DC63F"
                android:endColor="#106303"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#d2d2d2" />
            <corners
                android:radius="1dp"
                android:color="#878787"/>

        </shape>
    </item>





</selector>